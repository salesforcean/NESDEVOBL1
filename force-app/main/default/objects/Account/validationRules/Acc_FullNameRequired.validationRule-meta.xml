<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Acc_FullNameRequired</fullName>
    <active>false</active>
    <errorConditionFormula>AND( ISBLANK( Display_Name__c),  RecordType.DeveloperName   = &quot;Educational_Institution&quot; || RecordType.DeveloperName   = &quot;Academic_Program&quot; )</errorConditionFormula>
    <errorMessage>All accounts with record type of Educational Institution or Academic Program must define a full name</errorMessage>
</ValidationRule>
