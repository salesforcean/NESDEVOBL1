<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>C_Require_Data_Type_with_Comp_Value</fullName>
    <active>true</active>
    <errorConditionFormula>AND( ISBLANK(TEXT(Comparison_Data_Type__c)), NOT(ISBLANK( Comparison_Value__c)))</errorConditionFormula>
    <errorMessage>Data type is required when there is a comparison value.</errorMessage>
</ValidationRule>
