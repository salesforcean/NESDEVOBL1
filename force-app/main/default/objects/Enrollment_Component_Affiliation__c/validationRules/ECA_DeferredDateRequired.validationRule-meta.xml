<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ECA_DeferredDateRequired</fullName>
    <active>false</active>
    <errorConditionFormula>AND( ISPICKVAL( Status__c , &apos;Deferred&apos;),  ISBLANK( Deferral_Date__c ) )</errorConditionFormula>
    <errorDisplayField>Deferral_Date__c</errorDisplayField>
    <errorMessage>For status &apos;Deferred&apos; , Deferral date field is required.</errorMessage>
</ValidationRule>
