<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>SSN_length_Limit</fullName>
    <active>false</active>
    <description>This field should only contain 9 characters</description>
    <errorConditionFormula>AND(Social_Security_Number__c !=null, LEN(Social_Security_Number__c  ) !=9)</errorConditionFormula>
    <errorDisplayField>Social_Security_Number__c</errorDisplayField>
    <errorMessage>Please enter a valid SSN value.</errorMessage>
</ValidationRule>
