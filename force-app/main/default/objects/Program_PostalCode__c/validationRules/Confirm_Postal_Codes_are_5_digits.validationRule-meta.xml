<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Confirm_Postal_Codes_are_5_digits</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX( PostalCode__c , &quot;\\d{5}&quot;))</errorConditionFormula>
    <errorDisplayField>PostalCode__c</errorDisplayField>
    <errorMessage>Postal Codes must be 5 digits</errorMessage>
</ValidationRule>
